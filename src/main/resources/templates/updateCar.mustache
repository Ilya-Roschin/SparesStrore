<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login Customer</title>
    <style>
                * {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            color: darkgray;
        }

        body {
            padding: 0 auto;
        }

        header {
            background-color: cadetblue;
            height: 75px;
        }

        header div {
            height: auto;
            padding: 20px 0;
        }

        header ul {
            max-width: 33%;
            min-width: 10%;
            display: inline;
        }

        header a {
            color: azure;
            padding: 10px 15px;
            text-align: center;
            text-decoration: none;
            font-size: 24px;
        }

        form {
            max-width: 500px;
            margin: 15px auto;
            padding: 15px;
            background-color: aliceblue;
            border: 1px solid cadetblue;
        }

        button {
            margin: 10px 0px 0px;
            font-size: 150%;
            border: none;
            background-color: cadetblue;
            color: azure;
            padding: 5px 10px;
        }

        p {
            padding: 5px 0;
        }

    </style>
</head>
<body>
<header>

    <div id="menu"> <!-- Меню -->
        <ul>
            {{#links}}
               <a href="{{link}}">{{namePage}}</a>
            {{/links}}
        </ul>
    </div>
</header>
{{#car}}
    <form method="post" enctype="multipart/form-data"  >

        <p>
            <input type="text" name="name" value="{{carName}}" placeholder="name" />
        </p>
        <p>
            <input type="text" name="brand" value="{{brand}}" placeholder="price" />
        </p>
        <p>
            <input type="file" name="file"/>
        </p>
        <button type="submit">Update Car</button>
{{/car}}
</body>
</html>