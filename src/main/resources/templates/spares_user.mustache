<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login Customer</title>

    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            color: darkgray;
        }

        header {
            background-color: cadetblue;
            height: 75px;
            margin-bottom: 50px;
        }

        header div {
            height: auto;
            padding: 20px 0;
        }

        header ul {
            max-width: 33%;
            min-width: 10%;
            display: inline;
        }

        header a {
            color: azure;
            padding: 10px 15px;
            text-align: center;
            text-decoration: none;
            font-size: 24px;
        }

        .spare button {
            padding: 5px 0;
            color: azure;
            background-color: cadetblue;
            font-size: medium;
            border: none;
            padding: 5px 15px;
            margin-top: 15px;
        }

        .spare {
            width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid cadetblue;
        }

        .spare form {
            display: inline;
        }

        .spare img {
            width: 300px;
            margin: 0 25%;
        }

        .buttons {
            text-align: center;
            margin: 0 25%;
        }
    </style>
</head>

<body>
<header>

    <div id="menu"> <!-- Меню -->
        <ul>
            {{#links}}
               <a href="{{link}}">{{namePage}}</a>
            {{/links}}
        </ul>
    </div>
</header>

{{#spares}}
    <div class="spare">
        <div>
            <img src="../../{{spareUrl}}" alt="здесь могло быть фото продукта"/>
            <b>цена: </b>>
            <span>{{price}}</span>
        </div>
        <div>
            {{#category}}
                <b>категория: </b>>
                <span>{{categoryName}}</span>
            {{/category}}
        </div>
        <div>
            {{#car}}
                <b>автомобиль: </b>>
                <span>{{carName}}</span>
            {{/car}}
            <div>
                <b>деталь: </b>>
                <span>{{spareName}}</span>
                <form action="/order/add-to-order/{{spareId}}" method="post">
                    <input type="number" name="count"  value = "1" placeholder="количество" />
                    <button type="submit">добавить в корзину</button>
                </form>
            </div>
        </div>
{{/spares}}

</body>
</html>