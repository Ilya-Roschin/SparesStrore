<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login Customer</title>

    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            color: darkgray;
        }

        body {
            padding: 0 auto;
        }

        header {
            background-color: cadetblue;
            height: 75px;
        }

        header div {
            height: auto;
            padding: 20px 0;
        }

        header ul {
            max-width: 33%;
            min-width: 10%;
            display: inline;
        }

        header a {
            color: azure;
            padding: 10px 15px;
            text-align: center;
            text-decoration: none;
            font-size: 24px;
        }

        .car-card {
            text-align: center;
            width: 600px;
            margin: 0 auto;
            padding: 20px 0;
        }

        .car-card img {
            width: 600px;
        }

    </style>
</head>

<body>
<header>

    <div id="menu"> <!-- Меню -->
        <ul>
            {{#links}}
                <a href="{{link}}">{{namePage}}</a>
            {{/links}}
        </ul>
    </div>
</header>

{{#carLink}}
    <div class="car-card">
        <a href="{{link}}"><img src="{{url}}" alt="здесь могло быть фото продукта"/></a>
        <li><a href="{{link}}">{{namePage}}</a></li>
    </div>
{{/carLink}}

</body>
</html>